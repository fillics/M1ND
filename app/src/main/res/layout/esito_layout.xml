<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true">


    <TextView
        android:id="@+id/hai_inserito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/fredokaone_regular"
        android:text="Hai inserito il numero:"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="36dp"
        app:layout_constraintBottom_toTopOf="@+id/tvNumeroInserito"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/tvNumeroInserito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/fredokaone_regular"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/tvControllo"
        app:layout_constraintTop_toBottomOf="@+id/hai_inserito"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/tvControllo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNumeroInserito"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/fredokaone_regular"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintTop_toBottomOf="@+id/tvNumeroInserito"
        tools:layout_editor_absoluteX="0dp" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvControllo"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvControllo"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/iwPallino1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@id/iwPallino2" />

        <ImageView
            android:id="@+id/iwPallino2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@id/iwPallino3" />

        <ImageView
            android:id="@+id/iwPallino3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@id/iwPallino4" />

        <ImageView
            android:id="@+id/iwPallino4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
