<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blurred_background"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="171dp"
        android:layout_height="153dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo2" />


    <Button
        android:id="@+id/nuovapartita_btn"
        android:layout_width="300dp"
        android:layout_height="74dp"
        android:layout_marginStart="161dp"
        android:layout_marginEnd="162dp"
        android:background="@drawable/custom_button_nuovapartita"
        android:fontFamily="@font/fredokaone_regular"
        android:text="Nuova Partita"
        android:textAllCaps="false"
        android:textColor="#208220"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/partiterecenti_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintVertical_bias="0.806" />

    <Button
        android:id="@+id/partiterecenti_btn"
        android:layout_width="300dp"
        android:layout_height="74dp"
        android:layout_marginStart="161dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/custom_button_partiterecenti"
        android:fontFamily="@font/fredokaone_regular"
        android:text="Partite Recenti"
        android:textAllCaps="false"
        android:textColor="#165916"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/impostazioni_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/impostazioni_btn"
        android:layout_width="300dp"
        android:layout_height="74dp"
        android:layout_marginStart="161dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/custom_button_impostazioni"
        android:fontFamily="@font/fredokaone_regular"
        android:text="Impostazioni"
        android:textAllCaps="false"
        android:textColor="#76dd76"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="55dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="355dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="466dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="491dp" />


</androidx.constraintlayout.widget.ConstraintLayout>