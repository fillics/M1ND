<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="top">

    <Button
        android:id="@+id/btnRandom"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/fredokaone_regular"
        android:text="Genera Numero casuale"
        android:layout_margin="30dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin_lay_numbers"
        android:layout_below="@+id/btnRandom"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tvInput1"
            android:layout_width="100dp"
            android:layout_height="49dp"
            android:fontFamily="@font/fredokaone_regular"
            android:padding="10dp"
            android:text="_"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvInput2"
            android:layout_width="100dp"
            android:layout_height="49dp"
            android:fontFamily="@font/fredokaone_regular"
            android:padding="10dp"
            android:text="_"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvInput3"
            android:layout_width="100dp"
            android:layout_height="49dp"
            android:fontFamily="@font/fredokaone_regular"
            android:padding="10dp"
            android:text="_"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvInput4"
            android:layout_width="100dp"
            android:layout_height="49dp"
            android:fontFamily="@font/fredokaone_regular"
            android:padding="10dp"
            android:text="_"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lin_lay_numbers">

        <Button
            android:id="@+id/btnGuess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/fredokaone_regular"
            android:layout_marginRight="10dp"
            android:text="Indovina"/>

        <Button
            android:id="@+id/btnTentativi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/fredokaone_regular"
            android:text="Tentativi" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/fredokaone_regular"/>

    </LinearLayout>


</RelativeLayout>

